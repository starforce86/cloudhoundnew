<body class="inner">

	<!-- Facebook invite friends feature-->
	<div id="fb-root"></div>
	<script src="http://connect.facebook.net/en_US/all.js"></script>
	<script>
		FB.init({
		appId:'1485946781678000',
		cookie:true,
		status:true,
		xfbml:true
		});

		function InviteF()
		{
			FB.ui({
				method: 'apprequests',
				message: 'Show your Friends how to Search the Cloud',
			}, function(response){
				console.log(response);
			});	
		}
		function share_facebook(url) {
			console.log(url);
			FB.ui({
			  method: 'share',
			  href: url,
			}, function(response){});
		}
	</script>
	
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
   <header class="header">
  
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="row">
                    <a class="navbar-brand" href="/"><img src="img/logo.png" alt="Cloud Hound"></a>
        
                    <div id="sub-menu" class="pull-right">
                      <button type="button" class="btn btn-default" onclick="InviteF();">Invite Friends</button>
                    </div>
              </div>
            </div>
            <!-- /.container -->
        </nav>
        
    </header>
	
    <!-- Main Content -->
    <div id="main-content">
        <div class="container">
            <div class="row">
                <div id="primary" class="col-md-9">
                    <div id="primary-inner" class="row">
                    
                    	<div id="content-header">
                        	<div class="top clearfix">
                                <h1>{{heading}}</h1>
                                <div id="social-media">
                                	<ul class="list-inline">
                                    	<li><a href="javascript:void(0)" onclick="share_facebook(document.URL);"><img src="img/facebook-icon.png"></a></li>
                                        <li><a href="https://twitter.com/share?url=" + document.URL target="_blank"><img src="img/twitter-icon.png"></a></li>
                                        <li><a href=""><img src="img/youtube-icon.png"></a></li>
                                        <li><a href=""><img src="img/instagram-icon.png"></a></li>
                                    </ul>
                                </div>
                            </div>
                            <!--<div class="bottom clearfix">
                                <p class="sub-title">Please Read the Terms & Conditions & Complete the Following.</p>
                                <p class="date">October 2, 2014 - 10:34am by James Arthur</p>
                                </div>-->
                        </div>
                        <div id="content">
                          <ul class="news">
                          {{#each news}}
                            <li>
                              <div class="news-item">
                                {{#if image}}
                                <div class="news-image">
                                  <img src="{{image}}"></img>
                                </div>
                                {{/if}}
                                <div class="news-about">
                                  <h3 class="news-heading"><a href="{{link}}">{{title}}</a></h3>
                                  <p class="news-description">{{{description}}}</p>
                                </div>
                              </div>
                            </li>
                          {{/each}}
                        </ul>
                      </div>
                    </div>
                </div>
                <div id="secondary" class="sidebar col-md-3">
                    <div class="row">
                    	<aside id="trending" class="widget">
                         <h3>Trending</h3>
                         <ul class="list-unstyled">
                            <!--<li><strong>-- Kreg Crimble</strong>
                            to our latest listings and other industry knowledge by signing up for our newsletter below</li>
                            <li><strong>-- John Donny</strong>
                            to our latest listings and other industry knowledge by signing up for our newsletter below</li>
                            <li><strong>-- Elisa White</strong>
                            to our latest listings and other industry knowledge by signing up for our newsletter below</li>-->
                            {{#each trending}}
                              <li><strong><a href="{{url}}">-- {{title}}</a></strong>
                                {{snippet}}
                              </li>
                            {{/each}}
                         </ul>
                        </aside>
                    </div>
                </div>
            </div>
